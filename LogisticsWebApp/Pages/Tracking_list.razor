@page "/tracking-list/{userId:int}"
@layout DashBoardLayout
@attribute [Authorize(Roles = "admin")]
@inject IHttpClientFactory HttpClientFactory
@inject IJSRuntime JSRuntime
@inject ILocalStorageService LocalStorage
@using System.Text.Json
@using Microsoft.AspNetCore.Authorization
@using LogisticsWebApp.DTO
@using LogisticsWebApp.Helper
@using Blazored.LocalStorage
@inject NavigationManager NavigationManager

<div class="container-fluid p-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">LỊCH SỬ HOẠT ĐỘNG CỦA NGƯỜI DÙNG</h4>
            <button class="btn btn-light btn-sm" @onclick="GoBack">
                <i class="fas fa-arrow-left"></i> Quay lại
            </button>
        </div>

        <div class="card-body">
            <!-- Loading -->
            @if (isLoading)
            {
                <div class="text-center p-4">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Đang tải...</span>
                    </div>
                </div>
            }
            else
            {
                <!-- Bảng dữ liệu -->
                <div class="table-responsive">
                    <table class="table table-bordered table-hover">
                        <thead class="table-primary">
                            <tr>
                                <th class="text-center" style="width: 60px;">STT</th>
                                <th class="text-center">Tên đăng nhập</th>
                                <th class="text-center">Hành động</th>
                                <th class="text-center" style="width: 200px;">Thời gian</th>
                                <th class="text-center" style="width: 150px;">Địa chỉ IP</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (paginationService.PaginatedItems != null && paginationService.PaginatedItems.Any())
                            {
                                @for (int i = 0; i < paginationService.PaginatedItems.Count(); i++)
                                {
                                    var tracking = paginationService.PaginatedItems.ElementAt(i);
                                    var index = (paginationService.CurrentPage - 1) * paginationService.PageSize + i + 1;

                                    <tr>
                                        <td class="text-center">@index</td>
                                        <td>@tracking.Username</td>
                                        <td>@tracking.Action</td>
                                        <td class="text-center">@tracking.DateCreated.ToString("dd/MM/yyyy HH:mm:ss")</td>
                                        <td class="text-center">@tracking.Ip</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center py-4">
                                        <i class="bi bi-inbox" style="font-size: 3rem; color: #ccc;"></i>
                                        <p class="text-muted mt-2">Không có dữ liệu tracking</p>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Thông tin tổng số và phân trang -->
                <div class="d-flex justify-content-between align-items-center mt-3 flex-wrap gap-3">
                    <div class="d-flex align-items-center gap-3">
                        <div>
                            @{
                                var startItem = paginationService.TotalItems > 0 ? (paginationService.CurrentPage - 1) * paginationService.PageSize + 1 : 0;
                                var endItem = Math.Min(paginationService.CurrentPage * paginationService.PageSize, paginationService.TotalItems);
                            }
                            <strong>Hiển thị @startItem - @endItem của @paginationService.TotalItems kết quả</strong>
                        </div>
                    
                    </div>

                    @if (paginationService.TotalPages > 1)
                    {
                        <!-- Phân trang -->
                        <nav aria-label="Page navigation">
                            <ul class="pagination mb-0">
                                <li class="page-item @(paginationService.CurrentPage == 1 ? "disabled" : "")">
                                    <a class="page-link" @onclick="() => GoToFirstPage()" aria-label="First" style="cursor: pointer;">
                                        <span aria-hidden="true">&laquo;</span>
                                    </a>
                                </li>
                                <li class="page-item @(paginationService.CurrentPage == 1 ? "disabled" : "")">
                                    <a class="page-link" @onclick="() => GoToPreviousPage()" aria-label="Previous" style="cursor: pointer;">
                                        <span aria-hidden="true">&lsaquo;</span>
                                    </a>
                                </li>

                                @for (int page = paginationService.GetStartPage(); page <= paginationService.GetEndPage(); page++)
                                {
                                    var pageNumber = page;
                                    <li class="page-item @(paginationService.CurrentPage == pageNumber ? "active" : "")">
                                        <a class="page-link" @onclick="() => GoToPage(pageNumber)" style="cursor: pointer;">@pageNumber</a>
                                    </li>
                                }

                                <li class="page-item @(paginationService.CurrentPage == paginationService.TotalPages ? "disabled" : "")">
                                    <a class="page-link" @onclick="() => GoToNextPage()" aria-label="Next" style="cursor: pointer;">
                                        <span aria-hidden="true">&rsaquo;</span>
                                    </a>
                                </li>
                                <li class="page-item @(paginationService.CurrentPage == paginationService.TotalPages ? "disabled" : "")">
                                    <a class="page-link" @onclick="() => GoToLastPage()" aria-label="Last" style="cursor: pointer;">
                                        <span aria-hidden="true">&raquo;</span>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    }
                    else if (paginationService.TotalPages == 1)
                    {
                        <div class="text-muted">
                            <small>Trang 1 / 1</small>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>

@code {
    [Parameter]
    public int UserId { get; set; }

    private List<TrackingModel> allTrackings = new List<TrackingModel>();
    private PaginationService<TrackingModel> paginationService = new PaginationService<TrackingModel>(20);
    private bool isLoading = true;
    private int currentPageSize = 20;

    protected override async Task OnInitializedAsync()
    {
        await LoadTrackings();
    }

    private async Task LoadTrackings()
    {
        try
        {
            isLoading = true;
            StateHasChanged();

            var client = HttpClientFactory.CreateClient("LogisticApi");
            var token = await LocalStorage.GetItemAsync<string>("token");
            
            if (!string.IsNullOrEmpty(token))
            {
                client.DefaultRequestHeaders.Authorization = new System.Net.Http.Headers.AuthenticationHeaderValue("Bearer", token);
                var response = await client.GetAsync($"Tracking/getbyuserid/{UserId}");
                
                if (response.IsSuccessStatusCode)
                {
                    var content = await response.Content.ReadAsStringAsync();
                    var apiResult = JsonSerializer.Deserialize<HTTPResponseVM<List<TrackingModel>>>(content, new JsonSerializerOptions
                    {
                        PropertyNameCaseInsensitive = true
                    });
                    
                    if (apiResult != null && apiResult.Success && apiResult.Data != null)
                    {
                        allTrackings = apiResult.Data;
                        paginationService.SetData(allTrackings);
                    }
                    else
                    {
                        allTrackings = new List<TrackingModel>();
                        paginationService.SetData(allTrackings);
                    }
                }
                else
                {
                    await JSRuntime.InvokeVoidAsync("console.log", "Không thể tải danh sách tracking");
                    allTrackings = new List<TrackingModel>();
                    paginationService.SetData(allTrackings);
                }
            }
            else
            {
                await JSRuntime.InvokeVoidAsync("console.log", "Token không tồn tại");
                allTrackings = new List<TrackingModel>();
                paginationService.SetData(allTrackings);
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("console.log", $"Lỗi khi tải dữ liệu: {ex.Message}");
            allTrackings = new List<TrackingModel>();
            paginationService.SetData(allTrackings);
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void GoBack()
    {
        NavigationManager.NavigateTo("/user-list");
    }

    // Phân trang
    private void GoToFirstPage()
    {
        paginationService.GoToFirstPage();
        StateHasChanged();
    }

    private void GoToLastPage()
    {
        paginationService.GoToLastPage();
        StateHasChanged();
    }

    private void GoToNextPage()
    {
        paginationService.GoToNextPage();
        StateHasChanged();
    }

    private void GoToPreviousPage()
    {
        paginationService.GoToPreviousPage();
        StateHasChanged();
    }

    private void GoToPage(int page)
    {
        paginationService.GoToPage(page);
        StateHasChanged();
    }

    private void OnPageSizeChanged()
    {
        if (currentPageSize > 0 && currentPageSize != paginationService.PageSize)
        {
            paginationService.ChangePageSize(currentPageSize);
            StateHasChanged();
        }
    }
}

