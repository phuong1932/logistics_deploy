@page "/shipper-list"
@layout DashBoardLayout
@attribute [Authorize(Roles = "admin,staff")]
@inject IHttpClientFactory HttpClientFactory
@inject IJSRuntime JSRuntime
@inject ILocalStorageService LocalStorage
@inject SweetAlertService Swal
@using System.Text.Json
@using Microsoft.AspNetCore.Authorization
@using LogisticsWebApp.DTO
@using LogisticsWebApp.Helper
@using Blazored.LocalStorage
@inject NavigationManager NavigationManager

<div class="container-fluid p-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">DANH SÁCH TÀI XẾ</h4>
        </div>

        <div class="card-body">
            <!-- Tìm kiếm -->
            <div class="row mb-3 justify-content-between">
                <div class="col-md-3">
                    <button class="btn btn-success" @onclick="CreateShipper">
                        <i class="fas fa-plus"></i> Thêm mới tài xế
                    </button>
                </div>
                <div class="col-md-5 d-flex justify-content-end gap-2">
                    <div style="min-width: 400px;">
                        <input type="text" class="form-control" @bind="searchKeyword"
                            placeholder="Nhập tên tài xế hoặc số điện thoại..." />
                    </div>
                    <div class="d-flex flex-column justify-content-end" style="width: 48px;">
                        <button class="btn btn-primary w-100" style="height:38px; padding:0;" @onclick="SearchShipper">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                    <div class="d-flex flex-column justify-content-end" style="width: 48px;">
                        <button class="btn btn-danger w-100" style="height:38px; padding:0;" @onclick="ResetFilter">
                            <i class="fas fa-times-circle"></i>
                        </button>
                    </div>
                </div>
            </div>

            <!-- Loading -->
            @if (isLoading)
            {
                <div class="text-center p-4">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Đang tải...</span>
                    </div>
                </div>
            }
            else
            {
                <!-- Bảng dữ liệu -->
                <div class="table-responsive">
                    <table class="table table-bordered table-hover">
                        <thead class="table-primary">
                            <tr>
                           
                                <th class="text-center" style="width: 60px;">STT</th>
                                <th class="text-center" style="width: 120px;">Chức năng</th>
                                <th class="text-center">Tên tài xế</th>
                                <th class="text-center">Loại xe</th>
                                <th class="text-center">Số điện thoại</th>
                                <th class="text-center">Địa chỉ</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (paginationService.PaginatedItems != null && paginationService.PaginatedItems.Any())
                            {
                                @for (int i = 0; i < paginationService.PaginatedItems.Count(); i++)
                                {
                                    var shipper = paginationService.PaginatedItems.ElementAt(i);
                                    var index = (paginationService.CurrentPage - 1) * paginationService.PageSize + i + 1;

                                    <tr>
                            
                                        <td class="text-center">@index</td>
                                        <td class="text-center">
                                            <div class="btn-group btn-group-sm">
                                                <button class="btn btn-warning me-1" @onclick="() => EditShipper(shipper.Id)"
                                                    title="Sửa">
                                                    <i class="fas fa-pen"></i>
                                                </button>
                                                <button class="btn btn-danger" @onclick="() => DeleteShipper(shipper.Id)" title="Xóa">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                        <td>@(shipper.TenTaiXe ?? "Chưa có")</td>
                                        <td class="text-center">
                                            <span class="badge @GetLoaiXeBadgeClass(shipper.LoaiXe)">
                                                @GetLoaiXeName(shipper.LoaiXe)
                                            </span>
                                        </td>
                                        <td>@(shipper.SoDienThoai ?? "Chưa có")</td>
                                        <td>@(shipper.DiaChi ?? "Chưa có")</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="7" class="text-center py-4">
                                        <i class="bi bi-inbox" style="font-size: 3rem; color: #ccc;"></i>
                                        <p class="text-muted mt-2">Không có dữ liệu</p>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Thông tin tổng số -->
                <div class="d-flex justify-content-between align-items-center mt-3">
                    <div>
                        <strong>Tổng cộng có @paginationService.TotalItems kết quả, hiển thị trong @paginationService.TotalPages trang.</strong>
                    </div>

                    @if (paginationService.TotalPages > 1)
                    {
                        <!-- Phân trang -->
                        <nav aria-label="Page navigation">
                            <ul class="pagination mb-0">
                                <li class="page-item @(paginationService.CurrentPage == 1 ? "disabled" : "")">
                                    <a class="page-link" @onclick="() => GoToFirstPage()" aria-label="First">
                                        <span aria-hidden="true">&laquo;</span>
                                    </a>
                                </li>
                                <li class="page-item @(paginationService.CurrentPage == 1 ? "disabled" : "")">
                                    <a class="page-link" @onclick="() => GoToPreviousPage()" aria-label="Previous">
                                        <span aria-hidden="true">&lsaquo;</span>
                                    </a>
                                </li>

                                @for (int page = paginationService.GetStartPage(); page <= paginationService.GetEndPage(); page++)
                                {
                                    var pageNumber = page;
                                    <li class="page-item @(paginationService.CurrentPage == pageNumber ? "active" : "")">
                                        <a class="page-link" @onclick="() => GoToPage(pageNumber)">@pageNumber</a>
                                    </li>
                                }

                                <li class="page-item @(paginationService.CurrentPage == paginationService.TotalPages ? "disabled" : "")">
                                    <a class="page-link" @onclick="() => GoToNextPage()" aria-label="Next">
                                        <span aria-hidden="true">&rsaquo;</span>
                                    </a>
                                </li>
                                <li class="page-item @(paginationService.CurrentPage == paginationService.TotalPages ? "disabled" : "")">
                                    <a class="page-link" @onclick="() => GoToLastPage()" aria-label="Last">
                                        <span aria-hidden="true">&raquo;</span>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    }
                </div>
            }
        </div>
    </div>
</div>

@code {
    private List<ShipperModel> allShippers = new List<ShipperModel>();
    private PaginationService<ShipperModel> paginationService = new PaginationService<ShipperModel>(20);
    private bool isLoading = true;
    private string searchKeyword = "";

    protected override async Task OnInitializedAsync()
    {
        await LoadShippers();
    }

    private async Task LoadShippers()
    {
        try
        {
            isLoading = true;
            StateHasChanged();

            var client = HttpClientFactory.CreateClient("LogisticApi");
            var token = await LocalStorage.GetItemAsync<string>("token");
            if (!string.IsNullOrEmpty(token))
            {
                client.DefaultRequestHeaders.Authorization = new System.Net.Http.Headers.AuthenticationHeaderValue("Bearer", token);
            }
            var response = await client.GetAsync("Shipper/getallshippers");

            if (response.IsSuccessStatusCode)
            {
                var shippersresponse = await response.Content.ReadFromJsonAsync<HTTPResponseVM<List<ShipperModel>>>();
                
                if (shippersresponse != null && shippersresponse.Data != null)
                {
                    allShippers = shippersresponse.Data;
                    paginationService.SetData(allShippers);
                }
            }
            else
            {
                await JSRuntime.InvokeVoidAsync("alert", "Không thể tải danh sách tài xế");
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Lỗi khi tải dữ liệu: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void SearchShipper()
    {
        if (string.IsNullOrWhiteSpace(searchKeyword))
        {
            paginationService.SetData(allShippers);
            return;
        }

        var keyword = searchKeyword.ToLower();
        var filteredShippers = allShippers.Where(s =>
            (s.TenTaiXe != null && s.TenTaiXe.ToLower().Contains(keyword)) ||
            (s.SoDienThoai != null && s.SoDienThoai.ToLower().Contains(keyword))
        ).ToList();

        paginationService.SetData(filteredShippers);
        StateHasChanged();
    }

    private void ResetFilter()
    {
        searchKeyword = "";
        paginationService.SetData(allShippers);
        paginationService.GoToFirstPage();
        StateHasChanged();
    }

    // Phân trang
    private void GoToFirstPage()
    {
        paginationService.GoToFirstPage();
        StateHasChanged();
    }

    private void GoToLastPage()
    {
        paginationService.GoToLastPage();
        StateHasChanged();
    }

    private void GoToNextPage()
    {
        paginationService.GoToNextPage();
        StateHasChanged();
    }

    private void GoToPreviousPage()
    {
        paginationService.GoToPreviousPage();
        StateHasChanged();
    }

    private void GoToPage(int page)
    {
        paginationService.GoToPage(page);
        StateHasChanged();
    }



    private void CreateShipper()
    {
        NavigationManager.NavigateTo("/create-shipper");
    }

    private void EditShipper(int id)
    {
        NavigationManager.NavigateTo($"/edit-shipper/{id}");
    }

    private async Task DeleteShipper(int id)
    {
        // Dùng sweetalert2 để xác nhận thay vì confirm truyền thống
        var result = await Swal.FireAsync(new SweetAlertOptions
        {
            Title = "Xác nhận xóa",
            Text = $"Bạn có chắc muốn xóa tài xế này?",
            Icon = SweetAlertIcon.Warning,
            ShowCancelButton = true,
            ConfirmButtonText = "Xóa",
            CancelButtonText = "Hủy"
        });
        var confirmed = result.IsConfirmed;

        if (confirmed)
        {
            try
            {
                var client = HttpClientFactory.CreateClient("LogisticApi");
                var token = await LocalStorage.GetItemAsync<string>("token");
                if (!string.IsNullOrEmpty(token))
                {
                    client.DefaultRequestHeaders.Authorization = new System.Net.Http.Headers.AuthenticationHeaderValue("Bearer", token);
                }
                var response = await client.DeleteAsync($"Shipper/deleteshipper/{id}");

                if (response.IsSuccessStatusCode)
                {
                    // Tạo tracking mới
                    var username = CustomAuthStateProvider.UserNameLoginCurrent;
                    await client.PostAsJsonAsync("tracking/create", new { Username = username, Action = "Xóa tài xế thành công với id: " + id });
                    await Swal.FireAsync(new SweetAlertOptions
                    {
                        Icon = SweetAlertIcon.Success,
                        Title = "Thành công",
                        Text = "Xóa tài xế thành công!",
                        Timer = 1800,
                        ShowConfirmButton = false
                    });
                    await LoadShippers();
                }
                else
                {
                    var content = await response.Content.ReadAsStringAsync();
                    await Swal.FireAsync(new SweetAlertOptions
                    {
                        Icon = SweetAlertIcon.Error,
                        Title = "Lỗi",
                        Text = $"Xóa thất bại: {content}"
                    });
                }
            }
            catch (Exception ex)
            {
                await Swal.FireAsync(new SweetAlertOptions
                {
                    Icon = SweetAlertIcon.Error,
                    Title = "Lỗi",
                    Text = $"Lỗi khi xóa: {ex.Message}"
                });
            }
        }
    }

    // Helper methods
    private string GetLoaiXeName(byte? loaiXe)
    {
        return loaiXe switch
        {
            0 => "Xe tải nhỏ",
            1 => "Xe tải trung",
            2 => "Xe tải lớn",
            _ => "Chưa xác định"
        };
    }

    private string GetLoaiXeBadgeClass(byte? loaiXe)
    {
        return loaiXe switch
        {
            0 => "bg-info",
            1 => "bg-primary",
            2 => "bg-success",
            _ => "bg-secondary"
        };
    }
}

