@page "/shipper-cargo-detail/{Id:int}"
@layout DashBoardLayout
@attribute [Authorize(Roles = "shipper")]
@inject HttpClient Http
@inject IJSRuntime JSRuntime
@inject NavigationManager Navigation
@inject IHttpClientFactory HttpClientFactory
@inject SweetAlertService Swal
@using System.Text.Json
@using Microsoft.AspNetCore.Authorization
@using LogisticsWebApp.DTO

<div class="container-fluid p-4">
    <div class="row">
        <div class="col-12">
            <!-- Header Section -->
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center bg-primary text-white">
                    <div>
                        <h4 class="mb-0">
                            <i class="fas fa-box me-2"></i>
                            Chi tiết đơn hàng
                        </h4>
                        <small>Mã đơn: @(cargo?.CargoCode ?? "Đang tải...")</small>
                    </div>
                    <div>
                        <button class="btn btn-light" @onclick="GoBack">
                            <i class="fas fa-arrow-left me-1"></i>
                            Quay lại
                        </button>
                    </div>
                </div>
            </div>

            <!-- Thông báo lỗi -->
            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle"></i> @errorMessage
                    <button type="button" class="btn-close" @onclick="ClearError"></button>
                </div>
            }

            <!-- Thông báo thành công -->
            @if (!string.IsNullOrEmpty(successMessage))
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle"></i> @successMessage
                    <button type="button" class="btn-close" @onclick="ClearSuccess"></button>
                </div>
            }

            @if (isLoading)
            {
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="text-muted mt-2">Đang tải thông tin đơn hàng...</p>
                </div>
            }
            else if (cargo != null)
            {
                <!-- Trạng thái và thao tác -->
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col-md-6">
                                <h5 class="mb-0">Trạng thái hiện tại:</h5>
                                <h3>
                                    <span class="badge @GetStatusBadgeClass(cargo.StatusCargo)">
                                        @GetStatusCargoName(cargo.StatusCargo)
                                    </span>
                                </h3>
                            </div>
                            <div class="col-md-6 text-end">
                                <h5 class="mb-2">Thao tác nhanh:</h5>
                                <div class="btn-group-lg">
                                    @if (cargo.StatusCargo == 3)
                                    {
                                        <!-- Chờ shipper nhận hàng -> Đang vận chuyển -->
                                        <button class="btn btn-success btn-lg" @onclick="() => UpdateStatus(4)">
                                            <i class="fas fa-box-open fa-2x"></i>
                                            <div>Nhận hàng</div>
                                        </button>
                                    }
                                    else if (cargo.StatusCargo == 4)
                                    {
                                        <!-- Đang vận chuyển -> Hoàn thành -->
                                        <button class="btn btn-primary btn-lg" @onclick="() => UpdateStatus(5)">
                                            <i class="fas fa-check-circle fa-2x"></i>
                                            <div>Hoàn thành giao hàng</div>
                                        </button>
                                    }
                                    else if (cargo.StatusCargo == 5)
                                    {
                                        <!-- Đã hoàn thành -->
                                        <div class="alert alert-success mb-0">
                                            <i class="fas fa-check-double fa-2x"></i>
                                            <h5 class="mt-2">Đơn hàng đã hoàn thành!</h5>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>

                        <!-- Timeline trạng thái -->
                        <div class="mt-4">
                            <h5>Tiến trình đơn hàng:</h5>
                            <div class="status-timeline">
                                <div class="status-step @(cargo.StatusCargo >= 3 ? "completed" : "")">
                                    <div class="status-icon">
                                        <i class="fas fa-clock"></i>
                                    </div>
                                    <div class="status-label">Chờ nhận hàng</div>
                                </div>
                                <div class="status-line @(cargo.StatusCargo >= 4 ? "completed" : "")"></div>
                                <div class="status-step @(cargo.StatusCargo >= 4 ? "completed" : "")">
                                    <div class="status-icon">
                                        <i class="fas fa-truck"></i>
                                    </div>
                                    <div class="status-label">Đang vận chuyển</div>
                                </div>
                                <div class="status-line @(cargo.StatusCargo >= 5 ? "completed" : "")"></div>
                                <div class="status-step @(cargo.StatusCargo >= 5 ? "completed" : "")">
                                    <div class="status-icon">
                                        <i class="fas fa-check-circle"></i>
                                    </div>
                                    <div class="status-label">Hoàn thành</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <!-- Thông tin chung -->
                    <div class="col-md-6 mb-4">
                        <div class="card h-100">
                            <div class="card-header bg-light">
                                <h5 class="mb-0">
                                    <i class="fas fa-info-circle me-2"></i>
                                    Thông tin chung
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-sm-6 mb-3">
                                        <label class="form-label fw-bold">Mã đơn hàng:</label>
                                        <p class="text-primary fw-bold">@cargo.CargoCode</p>
                                    </div>
                                    <div class="col-sm-6 mb-3">
                                        <label class="form-label fw-bold">Ngày tạo:</label>
                                        <p>@(cargo.CreatedAt?.ToString("dd/MM/yyyy HH:mm") ?? "N/A")</p>
                                    </div>
                                    <div class="col-sm-6 mb-3">
                                        <label class="form-label fw-bold">Người tạo:</label>
                                        <p>@cargo.EmployeeCreate</p>
                                    </div>
                                    <div class="col-sm-6 mb-3">
                                        <label class="form-label fw-bold">Loại dịch vụ:</label>
                                        <p>@GetServiceTypeName(cargo.ServiceType)</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
            
                    <!-- Thông tin khách hàng -->
                    <div class="col-md-6 mb-4">
                        <div class="card h-100">
                            <div class="card-header bg-light">
                                <h5 class="mb-0">
                                    <i class="fas fa-user me-2"></i>
                                    Thông tin khách hàng
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-12 mb-3">
                                        <label class="form-label fw-bold">Tên công ty:</label>
                                        <p>@cargo.CustomerCompanyName</p>
                                    </div>
                                    <div class="col-sm-6 mb-3">
                                        <label class="form-label fw-bold">Người phụ trách:</label>
                                        <p>@cargo.CustomerPersonInCharge</p>
                                    </div>
                                    <div class="col-12 mb-3">
                                        <label class="form-label fw-bold">Địa chỉ giao hàng:</label>
                                        <p class="text-danger fw-bold">@(cargo.CustomerAddress ?? "Chưa cập nhật")</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Thông tin tài chính -->
                    <div class="col-md-6 mb-4">
                        <div class="card h-100">
                            <div class="card-header bg-light">
                                <h5 class="mb-0">
                                    <i class="fas fa-dollar-sign me-2"></i>
                                    Thông tin tài chính
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-sm-6 mb-3">
                                        <label class="form-label fw-bold">Tổng tiền dự kiến:</label>
                                        <p class="text-success fw-bold fs-5">@FormatCurrency(cargo.EstimatedTotalAmount)</p>
                                    </div>
                                    <div class="col-sm-6 mb-3">
                                        <label class="form-label fw-bold">Tiền đặt cọc:</label>
                                        <p class="text-info fw-bold">@FormatCurrency(cargo.AdvanceMoney)</p>
                                    </div>
                                    <div class="col-sm-6 mb-3">
                                        <label class="form-label fw-bold">Phí vận chuyển (của bạn):</label>
                                        <p class="text-warning fw-bold fs-4">@FormatCurrency(cargo.ShippingFee)</p>
                                    </div>
                                    <div class="col-sm-6 mb-3">
                                        <label class="form-label fw-bold">Còn lại:</label>
                                        <p class="text-danger fw-bold">@FormatCurrency(GetRemainingAmount())</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Ngày quan trọng -->
                    <div class="col-md-6 mb-4">
                        <div class="card h-100">
                            <div class="card-header bg-light">
                                <h5 class="mb-0">
                                    <i class="fas fa-calendar me-2"></i>
                                    Ngày quan trọng
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-sm-6 mb-3">
                                        <label class="form-label fw-bold">Ngày cấp phép:</label>
                                        <p>@(cargo.LicenseDate?.ToString("dd/MM/yyyy") ?? "Chưa cập nhật")</p>
                                    </div>
                                    <div class="col-sm-6 mb-3">
                                        <label class="form-label fw-bold">Ngày trao đổi:</label>
                                        <p>@(cargo.ExchangeDate?.ToString("dd/MM/yyyy") ?? "Chưa cập nhật")</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .card {
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        border: 1px solid rgba(0, 0, 0, 0.125);
    }

    .card-header {
        border-bottom: 1px solid rgba(0, 0, 0, 0.125);
    }

    .btn-group-lg .btn {
        padding: 20px 30px;
        margin: 0 10px;
    }

    /* Status Timeline Styles */
    .status-timeline {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 20px 0;
    }

    .status-step {
        display: flex;
        flex-direction: column;
        align-items: center;
        position: relative;
        z-index: 1;
    }

    .status-icon {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        background-color: #e9ecef;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 24px;
        color: #6c757d;
        border: 3px solid #e9ecef;
        transition: all 0.3s;
    }

    .status-step.completed .status-icon {
        background-color: #28a745;
        border-color: #28a745;
        color: white;
    }

    .status-label {
        margin-top: 10px;
        font-weight: bold;
        text-align: center;
        color: #6c757d;
    }

    .status-step.completed .status-label {
        color: #28a745;
    }

    .status-line {
        flex: 1;
        height: 4px;
        background-color: #e9ecef;
        margin: 0 10px;
        position: relative;
        top: -20px;
    }

    .status-line.completed {
        background-color: #28a745;
    }
</style>

@code {
    [Parameter] public int Id { get; set; }
    
    private CargoModel? cargo;
    private bool isLoading = true;
    private string? errorMessage;
    private string? successMessage;
    HttpClient? client;

    protected override async Task OnInitializedAsync()
    {
        client = HttpClientFactory.CreateClient("LogisticApi");
        await LoadCargoDetail();
    }

    private async Task LoadCargoDetail()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            if (client == null) return;

            var response = await client.GetAsync($"Cargo/getcargobyid/{Id}");
            var res = await response.Content.ReadFromJsonAsync<HTTPResponseVM<CargoModel>>();

            if (res?.Success != null)
            {
                cargo = res.Data;
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Lỗi khi tải thông tin đơn hàng: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task UpdateStatus(byte newStatus)
    {
        if (cargo == null || client == null) return;

        var statusName = GetStatusCargoName(newStatus);
        var result = await Swal.FireAsync(new SweetAlertOptions
        {
            Title = "Xác nhận",
            Text = $"Bạn có chắc muốn chuyển trạng thái sang '{statusName}'?",
            Icon = SweetAlertIcon.Question,
            ShowCancelButton = true,
            ConfirmButtonText = "Xác nhận",
            CancelButtonText = "Hủy"
        });

        if (result.IsConfirmed)
        {
            try
            {
                // Tạo request update với status mới
                var updateRequest = new
                {
                    cargoCode = cargo.CargoCode,
                    customerCompanyName = cargo.CustomerCompanyName,
                    employeeCreate = cargo.EmployeeCreate,
                    customerPersonInCharge = cargo.CustomerPersonInCharge,
                    customerAddress = cargo.CustomerAddress,
                    serviceType = cargo.ServiceType,
                    exchangeDate = cargo.ExchangeDate,
                    estimatedTotalAmount = cargo.EstimatedTotalAmount,
                    advanceMoney = cargo.AdvanceMoney,
                    shippingFee = cargo.ShippingFee,
                    idShipper = cargo.IdShipper,
                    statusCargo = newStatus
                };

                var updateResponse = await client.PutAsJsonAsync($"Cargo/updatecargo/{Id}", updateRequest);

                if (updateResponse.IsSuccessStatusCode)
                {
                    // Tạo tracking mới
                    var username = CustomAuthStateProvider.UserNameLoginCurrent;
                    await client.PostAsJsonAsync("tracking/create", new { Username = username, Action = "Cập nhật trạng thái đơn hàng thành công với id: " + Id + " sang " + statusName });
                    await Swal.FireAsync(new SweetAlertOptions
                    {
                        Icon = SweetAlertIcon.Success,
                        Title = "Thành công",
                        Text = $"Đã cập nhật trạng thái sang '{statusName}'!",
                        Timer = 1800,
                        ShowConfirmButton = false
                    });
                    await LoadCargoDetail();
                }
                else
                {
                    errorMessage = "Cập nhật trạng thái thất bại";
                }
            }
            catch (Exception ex)
            {
                errorMessage = $"Lỗi khi cập nhật trạng thái: {ex.Message}";
            }
        }
    }

    private string GetServiceTypeName(byte? serviceType)
    {
        return serviceType switch
        {
            0 => "Xuất khẩu",
            1 => "Nhập khẩu",
            2 => "Nội địa",
            _ => "Chưa xác định"
        };
    }

    private string GetStatusCargoName(byte? statusCargo)
    {
        return statusCargo switch
        {
            1 => "Chờ duyệt",
            2 => "Vô hiệu",
            3 => "Chờ shipper nhận hàng",
            4 => "Đang vận chuyển",
            5 => "Hoàn thành đơn hàng",
            _ => "Chưa xác định"
        };
    }

    private string GetStatusBadgeClass(byte? status)
    {
        return status switch
        {
            1 => "bg-warning text-dark",   // Chờ duyệt
            2 => "bg-danger",              // Vô hiệu
            3 => "bg-primary",             // Chờ shipper nhận hàng
            4 => "bg-info",                // Đang vận chuyển
            5 => "bg-success",             // Hoàn thành đơn hàng
            _ => "bg-secondary"
        };
    }

    private string FormatCurrency(decimal? amount)
    {
        if (amount == null) return "0 VNĐ";
        return $"{amount:N0} VNĐ";
    }

    private decimal GetRemainingAmount()
    {
        if (cargo?.EstimatedTotalAmount == null || cargo?.AdvanceMoney == null)
            return 0;
        return cargo.EstimatedTotalAmount.Value - cargo.AdvanceMoney.Value;
    }

    private void GoBack()
    {
        Navigation.NavigateTo("/shipper-cargo-list");
    }

    private void ClearError()
    {
        errorMessage = null;
        StateHasChanged();
    }

    private void ClearSuccess()
    {
        successMessage = null;
        StateHasChanged();
    }
}

