@page "/user-list"
@layout DashBoardLayout
@attribute [Authorize(Roles = "admin,staff")]
@inject IHttpClientFactory HttpClientFactory
@inject IJSRuntime JSRuntime
@inject ILocalStorageService LocalStorage
@inject SweetAlertService Swal
@using System.Text.Json
@using Microsoft.AspNetCore.Authorization
@using LogisticsWebApp.DTO
@using Blazored.LocalStorage
@using logistic_web.application.Helpers
@inject NavigationManager NavigationManager
@inject JwtAuthService JwtAuthService
<div class="container-fluid p-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">DANH SÁCH NGƯỜI DÙNG</h4>
        </div>

        <div class="card-body">
            <!-- Tìm kiếm -->
            <div class="row mb-3 justify-content-between">
                <div class="col-md-3">
                    <button class="btn btn-success" @onclick="CreateUser">
                        <i class="fas fa-plus"></i> Thêm mới người dùng
                    </button>
                </div>
                <div class="col-md-5 d-flex justify-content-end gap-2">
                    <div style="min-width: 400px;">
                        <input type="text" class="form-control" @bind="searchKeyword"
                            placeholder="Nhập tên đăng nhập, email hoặc họ tên..." />
                    </div>
                    <AuthorizeView Roles="admin" Context="adminContext">
                           <div class="d-flex flex-column justify-content-end" style="width: 48px;">
                        <button class="btn btn-primary w-100" style="height:38px; padding:0;" @onclick="SearchUser">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                    </AuthorizeView>

                    <div class="d-flex flex-column justify-content-end" style="width: 48px;">
                        <button class="btn btn-danger w-100" style="height:38px; padding:0;" @onclick="ResetFilter">
                            <i class="fas fa-times-circle"></i>
                        </button>
                    </div>
                </div>
            </div>

            <!-- Loading -->
            @if (isLoading)
            {
                <div class="text-center p-4">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Đang tải...</span>
                    </div>
                </div>
            }
            else
            {
                <!-- Bảng dữ liệu -->
                <div class="table-responsive">
                    <table class="table table-bordered table-hover">
                        <thead class="table-primary">
                            <tr>
                             
                                <th class="text-center" style="width: 60px;">STT</th>
                                <th class="text-center" style="width: 120px;">Chức năng</th>
                                <th class="text-center">Email</th>
                                <th class="text-center">Họ và tên</th>
                                <th class="text-center" style="width: 200px;">Vai trò</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (paginationService.PaginatedItems != null && paginationService.PaginatedItems.Any())
                            {
                                @for (int i = 0; i < paginationService.PaginatedItems.Count(); i++)
                                {
                                    var user = paginationService.PaginatedItems.ElementAt(i);
                                    var index = (paginationService.CurrentPage - 1) * paginationService.PageSize + i + 1;

                                    <tr>
                                    
                                        <td class="text-center">@index</td>
                                        <td class="text-center">
                                            <div class="btn-group btn-group-sm">
                                              
                                                <button class="btn btn-warning me-1" @onclick="() => EditUser(user.Id)"
                                                    title="Sửa">
                                                    <i class="fas fa-pen"></i>
                                                </button>
                                                <button class="btn btn-info me-1" @onclick="() => ViewTracking(user.Id)" title="Xem tracking">
                                                    <i class="fas fa-history"></i>
                                                </button>
                                                <button class="btn btn-danger" @onclick="() => DeleteUser(user.Id)" title="Xóa">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                        <td>@user.Email</td>
                                        <td>@user.FullName</td>
                                        <td>
                                            @if (user.Roles != null && user.Roles.Any())
                                            {
                                                <span class="badge me-1 @GetRoleBadgeClass(user.Roles)">@user.Roles</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Chưa có vai trò</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="9" class="text-center py-4">
                                        <i class="bi bi-inbox" style="font-size: 3rem; color: #ccc;"></i>
                                        <p class="text-muted mt-2">Không có dữ liệu</p>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Thông tin tổng số -->
                <div class="d-flex justify-content-between align-items-center mt-3">
                    <div>
                        <strong>Tổng cộng có @paginationService.TotalItems kết quả, hiển thị trong @paginationService.TotalPages trang.</strong>
                    </div>

                    @if (paginationService.TotalPages > 1)
                    {
                        <!-- Phân trang -->
                        <nav aria-label="Page navigation">
                            <ul class="pagination mb-0">
                                <li class="page-item @(paginationService.CurrentPage == 1 ? "disabled" : "")">
                                    <a class="page-link" @onclick="() => GoToFirstPage()" aria-label="First">
                                        <span aria-hidden="true">&laquo;</span>
                                    </a>
                                </li>
                                <li class="page-item @(paginationService.CurrentPage == 1 ? "disabled" : "")">
                                    <a class="page-link" @onclick="() => GoToPreviousPage()" aria-label="Previous">
                                        <span aria-hidden="true">&lsaquo;</span>
                                    </a>
                                </li>

                                @for (int page = paginationService.GetStartPage(); page <= paginationService.GetEndPage(); page++)
                                {
                                    var pageNumber = page;
                                    <li class="page-item @(paginationService.CurrentPage == pageNumber ? "active" : "")">
                                        <a class="page-link" @onclick="() => GoToPage(pageNumber)">@pageNumber</a>
                                    </li>
                                }

                                <li class="page-item @(paginationService.CurrentPage == paginationService.TotalPages ? "disabled" : "")">
                                    <a class="page-link" @onclick="() => GoToNextPage()" aria-label="Next">
                                        <span aria-hidden="true">&rsaquo;</span>
                                    </a>
                                </li>
                                <li class="page-item @(paginationService.CurrentPage == paginationService.TotalPages ? "disabled" : "")">
                                    <a class="page-link" @onclick="() => GoToLastPage()" aria-label="Last">
                                        <span aria-hidden="true">&raquo;</span>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    }
                </div>
            }
        </div>
    </div>
</div>

@code {
    private List<UserModel> allUsers = new List<UserModel>();
    private PaginationService<UserModel> paginationService = new PaginationService<UserModel>(20);
    private bool isLoading = true;
    private string searchKeyword = "";

    protected override async Task OnInitializedAsync()
    {
        await LoadUsers();
    }

    private async Task LoadUsers()
    {
        try
        {
            isLoading = true;
            StateHasChanged();

            var client = HttpClientFactory.CreateClient("LogisticApi");
            var token = await LocalStorage.GetItemAsync<string>("token");
            
            if (!string.IsNullOrEmpty(token))
            {
                client.DefaultRequestHeaders.Authorization = new System.Net.Http.Headers.AuthenticationHeaderValue("Bearer", token);
                var currentUserRole = JwtAuthService.GetRoleFromToken(token);
                var response = await client.GetAsync($"User/getusersbycurrentrole?role={currentUserRole}");
                
                if (response.IsSuccessStatusCode)
                {
                    var apiResult = await response.Content.ReadFromJsonAsync<HTTPResponseVM<List<UserModel>>>();
                    if (apiResult != null && apiResult.Data != null)
                    {
                        allUsers = apiResult.Data;
                        paginationService.SetData(allUsers);
                    }
                }
                else
                {
                    await JSRuntime.InvokeVoidAsync("console.log", "Không thể tải danh sách người dùng");
                }
            }
            else
            {
                await JSRuntime.InvokeVoidAsync("console.log", "Token không tồn tại");
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("console.log", $"Lỗi khi tải dữ liệu: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void SearchUser()
    {
        if (string.IsNullOrWhiteSpace(searchKeyword))
        {
            paginationService.SetData(allUsers);
            return;
        }

        var keyword = searchKeyword.ToLower();
        var filteredUsers = allUsers.Where(u =>
            u.Username.ToLower().Contains(keyword) ||
            u.Email.ToLower().Contains(keyword) ||
            u.FullName.ToLower().Contains(keyword)
        ).ToList();

        paginationService.SetData(filteredUsers);
        StateHasChanged();
    }

    private void ResetFilter()
    {
        searchKeyword = "";
        paginationService.SetData(allUsers);
        paginationService.GoToFirstPage();
        StateHasChanged();
    }

    // Phân trang
    private void GoToFirstPage()
    {
        paginationService.GoToFirstPage();
        StateHasChanged();
    }

    private void GoToLastPage()
    {
        paginationService.GoToLastPage();
        StateHasChanged();
    }

    private void GoToNextPage()
    {
        paginationService.GoToNextPage();
        StateHasChanged();
    }

    private void GoToPreviousPage()
    {
        paginationService.GoToPreviousPage();
        StateHasChanged();
    }

    private void GoToPage(int page)
    {
        paginationService.GoToPage(page);
        StateHasChanged();
    }



    private void CreateUser()
    {
        NavigationManager.NavigateTo("/create-user");
    }

    private void ViewUserDetail(int id)
    {
        NavigationManager.NavigateTo($"/user-detail/{id}");
    }

    private void EditUser(int id)
    {
        NavigationManager.NavigateTo($"/edit-user/{id}");
    }

    private void ViewTracking(int userId)
    {
        NavigationManager.NavigateTo($"/tracking-list/{userId}");
    }

    private async Task DeleteUser(int id)
    {
        // Dùng sweetalert2 để xác nhận thay vì confirm truyền thống
        var result = await Swal.FireAsync(new SweetAlertOptions
        {
            Title = "Xác nhận xóa",
            Text = $"Bạn có chắc muốn xóa người dùng?",
            Icon = SweetAlertIcon.Warning,
            ShowCancelButton = true,
            ConfirmButtonText = "Xóa",
            CancelButtonText = "Hủy"
        });
        var confirmed = result.IsConfirmed;

        if (confirmed)
        {
            try
            {
                var client = HttpClientFactory.CreateClient("LogisticApi");
                var token = await LocalStorage.GetItemAsync<string>("token");
                if (!string.IsNullOrEmpty(token))
                {
                    client.DefaultRequestHeaders.Authorization = new System.Net.Http.Headers.AuthenticationHeaderValue("Bearer", token);
                }
                var response = await client.DeleteAsync($"User/deleteuser/{id}");

                if (response.IsSuccessStatusCode)
                {
                    // Tạo tracking mới
                    var username = CustomAuthStateProvider.UserNameLoginCurrent;
                    await client.PostAsJsonAsync("tracking/create", new { Username = username, Action = "Xóa người dùng thành công với id: " + id });

                    await Swal.FireAsync(new SweetAlertOptions
                    {
                        Icon = SweetAlertIcon.Success,
                        Title = "Thành công",
                        Text = "Xóa người dùng thành công!",
                        Timer = 1800,
                        ShowConfirmButton = false
                    });
                    await LoadUsers();
                }
                else
                {
                    var content = await response.Content.ReadAsStringAsync();
                    await Swal.FireAsync(new SweetAlertOptions
                    {
                        Icon = SweetAlertIcon.Error,
                        Title = "Lỗi",
                        Text = $"Xóa thất bại: {content}"
                    });
                }
            }
            catch (Exception ex)
            {
                await Swal.FireAsync(new SweetAlertOptions
                {
                    Icon = SweetAlertIcon.Error,
                    Title = "Lỗi",
                    Text = $"Lỗi khi xóa: {ex.Message}"
                });
            }
        }
    }

    // Helper methods
    private string GetRoleBadgeClass(string role)
    {
        return role.ToLower() switch
        {
            "admin" => "bg-danger",
            "user" => "bg-primary",
            "staff" => "bg-success",
            "manager" => "bg-warning",
            _ => "bg-secondary"
        };
    }
}

